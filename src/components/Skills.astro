---
import Section from "./Section.astro";

import Css from "../icons/Css.astro";
import Html from "../icons/Html.astro";
import JavaScript from "../icons/JavaScript.astro";
import JQuery from "../icons/JQuery.astro";
import React from "../icons/React.astro"
import Tailwind from "../icons/Tailwind.astro";
import AstroIcon from "../icons/AstroIcon.astro";
---
<Section id="skills">
  <article class="flex flex-col text-center gap-y-3 text-gray-600">
    <h2 class="text-3xl mb-5 font-semibold">Mis Skills son:</h2>
    <ol class="text-lg font-semibold grid grid-cols-2 md:grid-cols-3 gap-x-7 md:gap-x-10 gap-y-2 text-center">
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <Html class="size-4 md:size-6"/>
        HTML
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-2 md:px-3 py-1 md:py-2 border-zinc-400 rounded-full text-sm">
        
        <Css class="size-4 md:size-6"/>
        CSS
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <JavaScript class="size-4 md:size-6 rounded-md"/>
        JAVASCRIPT
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <JQuery class="size-4 md:size-6"/>
        JQUERY
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <React class="size-4 md:size-6"/>
        REACTJS
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <AstroIcon class="size-4 md:size-6"/>
        ASTRO
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <Tailwind class="size-4 md:size-6"/>
        TAILWIND
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/images/BootstrapLogo.png" alt="Logo de Botstrap" />
        BOOTSTRAP
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/json.png" alt="Logo de Botstrap" />
        JSON
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/mysql.png" alt="Logo de Botstrap" />
        MYSQL
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/mariadb.png" alt="Logo de Botstrap" />
        MARIADB
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/sqlite.png" alt="Logo de Botstrap" />
        SQLITE
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/git.png" alt="Logo de Botstrap" />
        GIT
      </li>
      <li class="flex items-center justify-center gap-x-2 border-2 px-3 py-2 border-zinc-400 rounded-full text-sm">
        <img class="size-5" src="/iconos/github.png" alt="Logo de Botstrap" />
        GITHUB
      </li>
    </ol>
  </article>
</Section>